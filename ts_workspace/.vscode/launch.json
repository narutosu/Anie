	"version": "0.2.0",
	"configurations": [
		{
			"name": "js-Launch Program",
			"program": "${file}",
			"request": "launch",
			"type": "node"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Ts调试Game进程",
			"protocol": "inspector",
			"address": "127.0.0.1",
			"port": 9240, //	默认game1进程，如需修改看配置typescript.yaml
			"remoteRoot": "${workspaceFolder}/../server/",
			"localRoot": "${workspaceFolder}/"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "ts-UE客户端",
			"protocol": "inspector",
			"port": 8080,
			"remoteRoot": "${workspaceFolder}/../client/",
			"localRoot": "${workspaceFolder}/"
		}
	]
}